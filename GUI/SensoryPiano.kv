WindowManager:
    StartScreen:
    ActualWindow:
        

<StartScreen>:
    name: "start"
    FloatLayout:
        Label:
            pos_hint: {'center_x':0.5,'top':1.2}
            font_size: 100
            text: "Sensory Piano!"
            color: 0,0,0,1
                
        Button:
            size: 200, 200  
            size_hint: 0.3,0.1
            pos_hint: {"center_x":0.5,"top":0.45}
            background_normal: 'power_button.png'  
            background_down: 'power_button.png'
            on_release: root.manager.current = "second"
        

<ActualWindow>
    name: "second"
    FloatLayout:
        Button: 
            text: "Go Back"
            on_release: root.manager.current = "start"