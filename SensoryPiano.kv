
WindowManager:
    StartScreen:
    ActualWindow:
        

<StartScreen>:
    canvas.before:
        Color: 
            rgba:(1,1,1,1)

        Rectangle: 
            source: "InterfaceIcons/Background.png"
            size: root.width,  root.height
            pos: self.pos

    name: "start"
    FloatLayout:
        Label:
            pos_hint: {'center_x':0.5,'top':1.2}
            font_size: 90
            text: "Sensory Piano!"
            color: 0,0,0,1
                
        Button:
            opacity: 0  
            size_hint: 0.13,0.18
            pos_hint: {"center_x":0.5,"top":0.45}
            on_release: 
                root.manager.current = "second"
                root.manager.transition.direction = 'left'
        Image: 
            source: 'InterfaceIcons/power.png'
            size_hint: 0.3,0.18
            pos_hint:{"center_x":0.5,"top":0.45}
            
        

<ActualWindow>
    name: "second"
    FloatLayout:
        Button: 
            opacity: 0
            size_hint: 0.1,0.1
            pos_hint:{"center_x":0.035,"top":1}
            on_release: 
                root.manager.current = "start"
                root.manager.transition.direction = 'right'
            
        Image:
            source: 'InterfaceIcons/Back.png'
            size_hint: 0.1,0.1
            pos_hint:{"center_x":0.035,"top":1}

        Label:
            font_size: 80
            pos_hint: {"center_x":0.2,"top":1.3}
            text: "Octave"
            color: 0,0,0,1

        Label:
            id: octave_text_label
            font_size: 80
            pos_hint: {"center_x":0.2, "top": 1.0}
            text: ""
            color: 0,0,0,1

        Label: 
            font_size: 80
            pos_hint: {"center_x":0.8,"top":1.3}
            text: "Notes"
            color: 0,0,0,1

        Label:
            id: notes_text_label
            font_size: 80
            pos_hint: {"center_x":0.8, "top": 0.9}
            text: ""
            color: 0,0,0,1


        