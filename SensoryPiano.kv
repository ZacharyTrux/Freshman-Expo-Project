<Button>:
    font_size: 40

WindowManager:
    StartScreen:
    ActualWindow:
        

<StartScreen>:
    name: "start"
    FloatLayout:
        Label:
            pos_hint: {'center_x':0.5,'top':1.2}
            font_size: 100
            
            text: "Sensory Piano!"
                
        Button:
            size_hint: 0.3,0.1
            pos_hint: {"center_x":0.5,"top":0.45}
            text: "Start"
            on_release: 
                app.root.current = "second"

<ActualWindow>
    name: "second"
    FloatLayout:
        Button: 
            text: "Go Back"
            on_release: 
                app.root.current = "start"